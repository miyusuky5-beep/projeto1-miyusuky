num1 = float(input('Digite um número: '))
num2 = float(input('Digite outro número: '))

print('Escolha a operação: ')

print('1 - Somar')
print('2 - Subtrair')
print('3 - Multiplicar')
print('4 - Dividir')

opcao = input('Digite o número da operação: ')
  
if opcao == '1':
    resultado = num1 + num2
elif opcao == '2':
    resultado = num1 - num2
elif opcao == '3':
    resultado = num1 * num2
elif opcao == '4':
    resultado = num1 / num2
    if num2 == 0:
        print('Não é possível dividir por zero. Utilize um número válido.')
        resultado = num1 / num2
try:
    resultado = ''

except ValueError:
        print('Opção inválida.')

else:
    print('Opção incorreta! Utilize um dos operadores falados anteriormente.')
   
print(f'Seu resultado é: {resultado}')
